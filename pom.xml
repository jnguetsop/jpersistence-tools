  <groupId>BULK-INFO</groupId>
  <artifactId>JPersistenceTools</artifactId>
  <version>2.0</version>
  <name>JPersistenceTools</name>
  <description>Framework de gestion automatique, dynamique et configurable de la DAO.</description>
  <issueManagement>
  	<system>Jira</system>
  	<url>http://jira.enjtec.com</url>
  </issueManagement>
  <ciManagement>
  	<system>Hudson</system>
  	<url>http://hudson.enjtec.com</url>
  </ciManagement>
  <developers>
  	<developer>
  		<name>Jean-Jacques ETUNE NGI</name>
  		<email>shinjetune@gmail.com</email>
  		<organization>Synergie Logiciel</organization>
  		<timezone>GMT+1</timezone>
  		<roles>
  			<role>Développeur</role>
  		</roles>
  	</developer>
  	<developer>
  		<name>Jean-Vincent NGA NTI</name>
  		<email>vince_nti@gmail.com</email>
  		<organization>Synergie Logiciel</organization>
  		<timezone>GMT+1</timezone>
  		<roles>
  			<role>Débeloppeur</role>
  		</roles>
  	</developer>
  </developers>
  <organization>
  	<name>BULK-INFO</name>
  	<url>www.bulk-info.com</url>
  </organization>
  <dependencies>
  	
	<dependency>
	    <groupId>org.hibernate</groupId>
	    <artifactId>hibernate-core</artifactId>
	    <version>3.3.2.GA</version>
	</dependency>
	
	<dependency>
	    <groupId>org.hibernate</groupId>
	    <artifactId>hibernate-annotations</artifactId>
	    <version>3.2.1.ga</version>
	</dependency>

  	<dependency>
	    <groupId>de.odysseus.juel</groupId>
	    <artifactId>juel-spi</artifactId>
	    <version>2.2.3</version>
	</dependency>
	
	<dependency>
		<groupId>de.odysseus.juel</groupId>
		<artifactId>juel-api</artifactId>
		<version>2.2.2</version>
	</dependency>
	
	<dependency>
		<groupId>de.odysseus.juel</groupId>
		<artifactId>juel-impl</artifactId>
		<version>2.2.2</version>
	</dependency>
	
	<dependency>
	    <groupId>junit</groupId>
	    <artifactId>junit</artifactId>
	    <version>3.8.2</version>
	</dependency>
  </dependencies>
  
  <build>
  	<plugins>
  		<plugin>
  			<groupId>org.apache.maven.plugins</groupId>
  			<artifactId>maven-compiler-plugin</artifactId>
  			<configuration>
  				<source>1.6</source>
  				<target>1.6</target>
  			</configuration>
  		</plugin>
        <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-javadoc-plugin</artifactId>
            <version>2.8</version>
            <configuration>
                <show>private</show>
                <nohelp>false</nohelp>
            </configuration>
        </plugin>
  	</plugins>
  </build>
</project>