	<!-- Project name -->
	<name>jpersistence-tools</name>
	
	<!-- Project description -->
	<description>Framework de gestion automatique, dynamique et configurable de la DAO.</description>
	
	<!-- Project Version -->
	<version>2.0-SNAPSHOT</version>
	
	<!-- Packaging -->
	<packaging>pom</packaging>
	
	<!-- Project source URL -->
